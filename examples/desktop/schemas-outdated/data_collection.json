{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Data Collection Schema",
  "description": "Schema for collecting structured data from user input",
  "properties": {
    "name": {
      "type": "string",
      "description": "User's name",
      "minLength": 1
    },
    "age": {
      "type": "integer",
      "description": "User's age",
      "minimum": 0,
      "maximum": 150
    },
    "profession": {
      "type": "string",
      "description": "User's profession or job title"
    },
    "location": {
      "type": "string",
      "description": "User's location or city"
    },
    "interests": {
      "type": "array",
      "description": "List of user's interests",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
